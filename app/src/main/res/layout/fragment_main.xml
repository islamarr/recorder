<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_200"
    tools:context=".ui.main.MainFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/startRecordBtn"
        android:layout_width="@dimen/img_height_normal"
        android:layout_height="@dimen/img_height_tall"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:background="@drawable/shape_teal_circle"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/spacing_large"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_mic"
        app:tint="@color/teal_700" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/showRecordingsBtn"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        android:padding="@dimen/spacing_large"
        android:text="@string/show_recordings"
        android:textColor="@color/teal_700"
        android:textSize="@dimen/font_normal"
        app:backgroundTint="@color/white"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:rippleColor="@color/gray_200"
        app:strokeColor="@color/teal_700"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>